div.rg-selected-container
  /*padding 5px 16px 7px*/
  border-top 1px solid #E6E7E7
  background-color white
  border-bottom-left-radius 2px
  border-bottom-right-radius 2px
  display inline-block
  width 400px
  position relative
  div.rg-selected-content
    /*margin-right 30px*/
    display inline-block
    width 350px
  div.rg-done
    height 100%
    width 50px
    display inline-block
    text-align center
    position absolute
    top 0
    bottom 0
    right 0
    i
      line-height 1
      font-size 20px
      top 50%
      position absolute
      margin-top -10px

