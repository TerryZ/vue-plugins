duration = 200ms
down = animate-down
up = animate-up

div.v-dropdown-caller
    display inline-block
    &.v-dropdown-caller--full-width
        display block
div.v-dropdown-container
    border 1px solid #D6D7D7
    margin 0
    padding 0
    display inline-block
    position absolute
    top 0
    left 0
    box-sizing border-box
    background-color white
    -webkit-border-radius 2px
    border-radius 2px
    shadow(12px, 0.2)
    z-index 3000
    &.v-dropdown-embed
        position relative
        box-shadow 0 1px 6px rgba(0,0,0,0.12) !important
        z-index 100
    &.v-dropdown-no-border
        border 0
        shadow(8px, 0.25)

