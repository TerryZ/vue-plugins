@import "./icon.styl"

bg-dark = #eee

.sm-caller-container
    display inline-block
.v-selectmenu
    border-radius 2px

.sm-default-btn
    display inline-block
    position relative
    padding 6px 12px
    background-color white
    border 1px solid #ccc
    border-radius 4px
    font-size 14px
    line-height 1.42857143
    outline 0 !important
    color #666
    transition color .15s ease-in-out,
    background-color .15s ease-in-out,
    border-color .15s ease-in-out,
    box-shadow .15s ease-in-out
    span.sm-caret-down
        transition transform .2s ease
    &.sm-opened
        box-shadow 0 0 0 3px rgba(0, 0, 0, 0.08)
        border 1px solid #aaa
        color black
        background-color #e0e0e0
        span.sm-caret-down
            transform rotate(180deg)
        &:hover
            background-color #e0e0e0
            border 1px solid #aaa
    &:hover
        border 1px solid #aaa
        background-color #e0e0e0
        color black

.sm-caret
    display inline-block
    width 0
    height 0
    content ""
    margin-left 8px

.sm-caret-down
    border-top 4px solid
    border-left 4px solid transparent
    border-right 4px solid transparent
    margin-bottom 2px

.sm-caret-right
    border-left 4px solid
    border-top 4px solid transparent
    border-bottom 4px solid transparent
    margin-top 3px
    position absolute
    top 8px
    right 10px

.sm-header
    position relative
    border-radius 2px 2px 0 0
    background-color bg-dark
    & > h3
        padding 6px 80px 5px 10px
        margin 0
        text-align left
        color #555
        font-size 16px
        line-height 1.42
        white-space nowrap
        font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
    .sm-control
        position absolute
        text-align right
        top 0
        right 0
        padding 5px 10px
        span
            cursor pointer
            line-height 1
            color #999
            font-size 20px
            margin-left 5px
            &:hover
                color black

.sm-search
    padding 3px 10px 10px 10px
    background-color bg-dark
    input[type="text"]
        background-color white
        margin 0 !important
        width 100%
        font-size 14px
        line-height 1.42
        padding 4px 6px
        box-sizing border-box
        outline none !important
        border-radius 2px
        border 0
        // will-change border-color, box-shadow, background-color
        // transition border-color .3s ease-in-out,box-shadow .3s ease-in-out,background-color .3s ease-in-out
        // &focus
            //box-shadow 0 0 0 3px rgba(150,150,150, 0.2)
            //background-color white
        // 

.sm-message
    padding 0 10px 10px
    background-color bg-dark
    color black
    span
        font-size 15px
        line-height 1.42
        margin-left 5px
        text-shadow 0 1px 0 #fff 

/* group type */
.sm-tabs
    padding 0 10px
    background-color bg-dark
    ul
        padding 0
        margin 0
        text-align left
        li
            display inline-block
            a
                display inline-block
                padding 4px 12px 3px
                font-size 14px
                color #aaa
                text-decoration none
                cursor pointer
                line-height 1.42
                background transparent
                border-radius 2px 2px 0 0
                font-family "Helvetica Neue Light", "HelveticaNeue-Light", "Helvetica Neue", Calibri, Helvetica, Arial
                &.active 
                    color #24292e
                    background-color #fff 

/**
 * Results
 */
.sm-result-area
    background-color white
    list-style none
    margin 0
    padding 5px 0
    position relative
    width 100%
    overflow-y auto
    overflow-x hidden
    border-radius 0 0 2px 2px
    &:before,&:after
        display table
        content " "
    // &.sm-list-mode /*border-top 1px solid #E6E7E7*/
    &.sm-advanced
        min-width 260px
    &.sm-scroll-limit
        max-height 260px

/* regular menu item style */
ul.sm-results
    background-color white
    list-style none
    margin 0
    padding 0
    &.sm-regular
        width auto
        min-width 150px
        & > li
            padding 0
            min-width auto
            &:hover
                background-color #F6F8FA
                color black
                a
                    color black
            & > a
                width 100%
                display block
                padding 5px 10px 
            &.sm-disabled,
            &.sm-disabled:hover,
            &.sm-disabled a
                background-color white
                color #ccc
                cursor default 
            &.sm-header,
            &.sm-header:hover,
            &.sm-header a
                background-color white
                color black
                font-size 16px
                font-weight 600
                cursor default
            &.sm-divider
                background-color white

    & > li
        line-height 1.42
        margin 0
        overflow hidden
        padding 5px 10px
        position relative
        text-align left
        white-space nowrap
        min-width 180px
        font-size 14px
        color #666
        cursor  pointer
        font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
        & > a
            color #666
            text-decoration none
            transition none
        & > div.sm-selected-icon
            position absolute
            top 4px
            & > i
                visibility hidden
        & > div.sm-item-text
            font-size 14px
            display block
            position relative
            margin-left 25px
        &.sm-divider
            margin 8px 0
            padding 0
            cursor default
            overflow hidden
            border-bottom 1px solid #E5E5E5
        &.sm-over
            background-color #F6F8FA !important
            color black !important
            cursor pointer 
        &.sm-message-box
            cursor default
            padding-left 12px
            span
                font-size 16px
                line-height 1.42
                margin-left 10px 
        &.sm-selected
            font-weight 600
            color #666
            & > div.sm-selected-icon > i
                visibility visible

/* Sub menus */
.sm-sub-menu
    .sm-sub-header
        padding-top 2px !important
        &:hover
            background-color transparent !important
            color #666 !important
            cursor default !important
        .sm-sub-caption
            font-weight 600
            line-height 1.42
            font-size 16px
        .sm-sub-back
            display inline-block
            font-weight 700
            color #000
            padding 0 10px
            cursor pointer
            -webkit-transition opacity .5s cubic-bezier(.175,.885,.32,1)
                    transition opacity .5s cubic-bezier(.175,.885,.32,1)
            outline none !important
            margin 0
            opacity 0.5
            font-size 14px !important
            &:hover
                opacity 1
            i
                font-size 14px
